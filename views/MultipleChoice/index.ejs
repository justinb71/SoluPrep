<script>
function escapeLatexInJSON(jsonString) {
  return jsonString.replace(/\\\\/g, "\\\\\\\\")
                   .replace(/\(/g, "\\(")
                   .replace(/\)/g, "\\)")
                   .replace(/\{/g, "\\{")
                   .replace(/\}/g, "\\}")
                   .replace(/\[/g, "\\[")
                   .replace(/\]/g, "\\]");
}
  function createMultipleChoiceSection(questionText, options) {

    const multipleChoiceSection = document.createElement('div');
    multipleChoiceSection.className = 'multiple-choice-section';
    
    const badge = document.createElement('h3');
    badge.className = 'badge';
    badge.textContent = 'Multiple Choice Question';
    
    const question = document.createElement('h2');
    question.textContent = questionText;
    
    const form = document.createElement('form');
    form.className = 'form';
    
    options.forEach((option, index) => {
        const label = document.createElement('label');
        label.setAttribute('for', `0${index + 1}`);
        label.textContent = option;
        
        const input = document.createElement('input');
        input.id = `0${index + 1}`;
        input.type = 'radio';
        input.name = 'r';
        input.value = option;
        
        form.appendChild(label);
        form.appendChild(input);
    });
    
    multipleChoiceSection.appendChild(badge);
    multipleChoiceSection.appendChild(question);
    multipleChoiceSection.appendChild(form);
    
    document.querySelector(".parent-section").appendChild(multipleChoiceSection);
    
    return multipleChoiceSection;
}

